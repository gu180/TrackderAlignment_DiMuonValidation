#####################################
#Setup Environemnt:
#####################################
cmsrel CMSSW_11_0_0
cd CMSSW_11_0_0/src
cmsenv
git-cms-init
git-cms-addpkg Alignment/OfflineValidation
git remote add PatricksFork https://github.com/connorpa/cmssw.git
git checkout -b python_approach
git pull PatricksFork python_approach
git clone -b all-in-one git@github.com:gu180/TrackderAlignment_DiMuonValidation.git
cd TrackderAlignment_DiMuonValidation/
mv  DiMuonValidation.cc ./Alignment/OfflineValidation/plugins
mv *.cc ../Alignment/OfflineValidation/bin/
mv Zmumu.py Zmumu_cfg.py ../Alignment/OfflineValidation/python/TkAlAllInOneTool/
mv validateAlignments.py ../Alignment/OfflineValidation/scripts/
mv BuildFile.xml ../Alignment/OfflineValidation/bin/
mv testZmumu.yaml ../Alignment/OfflineValidation/test/

#####################################
#Run all-in-one tool
#####################################
cd Alignment/OfflineValidation
scram b
validateAlignments.py $CMSSW_BASE/src/Alignment/OfflineValidation/test/testZmumu.yaml
